/* pages/post/post-detail.wxss */
.top{
  width: 100%;
  background-color: rgba(245, 241, 244, 0.726);
}
.top.left{
  width:100px;
  font: bold;
}
.top.right{
  font-size: 15px;
}
.top.right.movieName{
  color: black;
  font-size: 25px;
}
.comment{
  border-top:1px solid black;
}
.userAvatar{
  width: 80rpx;
  height: 80rpx;
  border-radius:50%;    /*将方形图片成圆形图片布局*/
}
.postCommentButton{
  line-height: 50rpx;
  width: 130rpx;
}
.vote-star{
  display:inline-block;/*内联元素转换成块元素，并不换行*/
  margin-right:6px;
  width:75px;/*5个星星的宽度*/
  height:15px;/*1个星星的高度*/
  overflow:hidden;
  vertical-align:middle;
  background:url("data:image/png;base64,") repeat-x;
}
.ll{
  display:inline-block;/*内联元素转换成块元素，并不换行*/
  width: 75px;
  line-height: 15px;
  height:15px;/*1个星星的高度*/
  background:url("data:image/png;base64,") repeat-x 00;
}
.star-after{
  position: relative;
  width: 75px;
  left:-80px;
  line-height: 15px;
}
.box{
  display: flex;
  /* flex-direction: column; */
}
.name-block,.comment-head{
  display: flex;
  flex-direction: column;

}
.comment-head{
  flex-direction: row;
}