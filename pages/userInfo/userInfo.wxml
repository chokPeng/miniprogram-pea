<!--pages/userInfo/userInfo.wxml-->
<view class="avatar">
  <image src='{{userAvatar}}' bindtap="chooseImage"></image>
  <text class="tips">点击图片修改头像</text>
</view>
<form bindsubmit='updateUserInfo' class="form">
  <input name="userName" placeholder='用户名'></input>
  <input type='password' name="userPassword" placeholder='密码'></input>
  <radio-group name='radio'>
    <radio value="男">男</radio>
    <radio value="女">女</radio>
  </radio-group>
  <input name="userInfo" placeholder='简介'></input>
  <input name="userAddress" placeholder='坐标'></input>
  <button class="submitButton" form-type='submit'>修改</button>
</form>

